<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do App</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:100"
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">

</head>
<body>
  
     <ul class="navbar">
      <li> <a href="/"> <i class="fas fa-calendar-day"></i> Today</a></li>
      <li> <a href="/work"> <i class="fas fa-briefcase"></i> Work</a></li>
     </ul>

     <div class="box" id="heading">
       <%= formattedDate  %>
      </div>
      <div class="container">
        <% if(locals.task) { %>
         <!-- <h2>TODAY</h2> -->
       

           <% task.forEach(function (item)  { %>

           <form action="/removetask" method="POST">
            

           <div class="item">
              <input type="checkbox" name="checkbox" value="<%= item._id%>" onchange="this.form.submit()">
              <p> <%= item.name  %></p>
            </div> 
          </form>
         <% }) %>
          <form action="/addtask" method="POST" >
          <input type="text" name="newtask" placeholder="New task" class="todo">
          <button type="submit"> <span class="fas fa-plus"></span></button>
        </form>
        
      <% } %>


      
        <% if (locals.isWorkPage) { %>
          <!-- <h2>Work List</h2> -->
           
            <% if (task2.length > 0) { %>
              <% task2.forEach(function (item)  { %>

                <form action="/removetask2" method="POST">
                 
     
                <div class="item">
                   <input type="checkbox" name="check" value="<%= item._id%>" onchange="this.form.submit()">
                   <p> <%= item.name  %></p>
                 </div> 

               </form>
              <% }) %>
            <% } else { %>
              <li>No tasks available.</li>
            <% } %>
            <form action="/addtask2" method="POST">
              <input type="text" name="newtask2" placeholder="New task" class="todo">
              <button type="submit"> <span class="fas fa-plus"></span></button>
           </form>
        <% } %>
         
       
       

     
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

      <%- include("footer") -%>
